{
    "listeners": {
        "*:8080": {
            "pass": "routes/wordpress"
        }
    },
    "routes": {
        "wordpress": [
            {
                "match": {
                    "uri": [
                        "*.php",
                        "*.php/*",
                        "/wp-admin/"
                    ]
                },
                "action": {
                    "pass": "applications/wordpress_direct"
                }
            },
            {
                "action": {
                    "share": "/var/app/wordpress/",
                    "fallback": {
                        "pass": "applications/wordpress"
                    }
                }
            }
        ]
    },
    "applications": {
        "wordpress": {
            "type": "php",
            "user": "nobody",
            "group": "nogroup",
            "root": "/var/app/wordpress/",
            "script": "index.php"
        },
        "wordpress_direct": {
            "type": "php",
            "user": "nobody",
            "group": "nogroup",
            "root": "/var/app/wordpress/"
        }

    }
}
